{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Node",
    "outDir": "lib",
    "outFile": "lib/types.d.ts",
    "skipLibCheck": true,
    "target": "esnext"
  },
  "include": ["src"],
  "exclude": ["lib", "node_modules", "**/*.test.ts"]
}
